<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/fab_margin"
    android:background="@drawable/shape_bottom_sheet"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"

        app:cardCornerRadius="10dp"
        app:contentPadding="@dimen/fab_margin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/info_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="상호명"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/info_address"
                android:layout_width="276dp"
                android:layout_height="44dp"
                android:text="주소"
                android:textColor="@color/main_gray_light2"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_name" />


            <TextView
                android:id="@+id/info_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023.03.01"
                android:textColor="@color/main_gray_light2"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/info_address"
                app:layout_constraintTop_toBottomOf="@+id/info_address" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>