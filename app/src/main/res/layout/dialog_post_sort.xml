<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@color/main_black">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="필터"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sortLayout"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sortLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@id/categoryLayout"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/tv_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort"
            android:textSize="15sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



        <CheckBox
            android:id="@+id/cb_sort_total"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/sel_checkbox_box"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="@string/total"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:checked="true"
            android:paddingHorizontal="8dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/tv_sort"
            app:layout_constraintTop_toTopOf="parent"
            />

        <CheckBox
            android:id="@+id/cb_q_and_a"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/sel_checkbox_box"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="@string/q_and_a"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:paddingHorizontal="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/cb_sort_total"
            app:layout_constraintTop_toTopOf="@id/cb_sort_total"
            app:layout_constraintBottom_toBottomOf="@id/cb_sort_total"/>

        <CheckBox
            android:id="@+id/cb_knowledge_sharing"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/sel_checkbox_box"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="@string/knowledge_sharing"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:paddingHorizontal="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/cb_q_and_a"
            app:layout_constraintTop_toTopOf="@id/cb_q_and_a"
            app:layout_constraintBottom_toBottomOf="@id/cb_q_and_a"/>

        <CheckBox
            android:id="@+id/cb_show_off"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/sel_checkbox_box"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="@string/show_off"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/cb_sort_total"
            app:layout_constraintTop_toBottomOf="@id/cb_sort_total"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cb_assess"/>

        <CheckBox
            android:id="@+id/cb_assess"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/sel_checkbox_box"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="@string/assess"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:paddingHorizontal="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/cb_show_off"
            app:layout_constraintTop_toTopOf="@id/cb_show_off"
            app:layout_constraintBottom_toBottomOf="@id/cb_show_off"/>

        <CheckBox
            android:id="@+id/cb_free"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/sel_checkbox_box"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="@string/free"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:paddingHorizontal="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/cb_assess"
            app:layout_constraintTop_toTopOf="@id/cb_assess"
            app:layout_constraintBottom_toBottomOf="@id/cb_show_off"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/categoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sortLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_no">


        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textSize="15sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <CheckBox
            android:id="@+id/cb_category_total"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/sel_checkbox_box"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="@string/total"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:checked="true"
            android:paddingHorizontal="8dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/tv_category"
            app:layout_constraintTop_toTopOf="parent"
            />

        <CheckBox
            android:id="@+id/cb_health"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/sel_checkbox_box"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="@string/health"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:paddingHorizontal="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/cb_category_total"
            app:layout_constraintTop_toTopOf="@id/cb_category_total"
            app:layout_constraintBottom_toBottomOf="@id/cb_category_total"/>

        <CheckBox
            android:id="@+id/cb_pilates"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/sel_checkbox_box"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="@string/pilates"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:paddingHorizontal="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/cb_health"
            app:layout_constraintTop_toTopOf="@id/cb_health"
            app:layout_constraintBottom_toBottomOf="@id/cb_health"/>

        <CheckBox
            android:id="@+id/cb_yoga"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/sel_checkbox_box"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="@string/yoga"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/cb_category_total"
            app:layout_constraintTop_toBottomOf="@id/cb_category_total"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <CheckBox
            android:id="@+id/cb_jogging"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/sel_checkbox_box"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="@string/jogging"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:paddingHorizontal="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/cb_yoga"
            app:layout_constraintTop_toTopOf="@id/cb_yoga"
            app:layout_constraintBottom_toBottomOf="@id/cb_yoga"/>

        <CheckBox
            android:id="@+id/cb_etc"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/sel_checkbox_box"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="@string/etc"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:paddingHorizontal="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/cb_jogging"
            app:layout_constraintTop_toTopOf="@id/cb_jogging"
            app:layout_constraintBottom_toBottomOf="@id/cb_jogging"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_no"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/sel_btn_red_pressed"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryLayout"
        app:layout_constraintEnd_toStartOf="@id/btn_apply"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/apply"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/sel_btn_red_pressed"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/categoryLayout"
        app:layout_constraintStart_toEndOf="@id/btn_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>