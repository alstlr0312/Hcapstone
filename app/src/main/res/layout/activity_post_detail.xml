<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_black"
    tools:context=".features.postdetail.PostDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/layout_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_black"
        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/layout_collapsingToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/main_black"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow_left"
                    app:tint="@color/main_gray_light"
                    android:layout_marginStart="@dimen/fab_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginVertical="13dp"
                    android:src="@drawable/logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_red"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_post_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시글 종류"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_red_dark"
                android:layout_margin="@dimen/fab_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_next"
                app:tint="@color/main_red_dark"
                android:layout_marginStart="2dp"
                app:layout_constraintStart_toEndOf="@id/tv_post_type"
                app:layout_constraintTop_toTopOf="@id/tv_post_type"
                app:layout_constraintBottom_toBottomOf="@id/tv_post_type"/>

            <TextView
                android:id="@+id/tv_post_catory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동 종류"
                android:textSize="14sp"
                android:textColor="@color/main_red_dark"
                android:textStyle="bold"
                android:layout_marginStart="2dp"
                app:layout_constraintStart_toEndOf="@id/iv_arrow_right"
                app:layout_constraintTop_toTopOf="@id/iv_arrow_right"
                app:layout_constraintBottom_toBottomOf="@id/iv_arrow_right"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_date"
                android:textColor="@color/main_gray_light2"
                android:textSize="12sp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="@id/tv_post_date"
                app:layout_constraintBottom_toBottomOf="@id/tv_post_date"
                app:layout_constraintEnd_toStartOf="@id/tv_post_date"/>

            <TextView
                android:id="@+id/tv_post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23.04.04"
                android:textColor="@color/main_gray_light2"
                android:textSize="12sp"
                android:layout_marginEnd="@dimen/fab_margin"
                app:layout_constraintTop_toTopOf="@id/tv_post_type"
                app:layout_constraintBottom_toBottomOf="@id/tv_post_type"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_profile_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile_photo_base"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/fab_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_post_type"
                app:riv_corner_radius="15dp"/>

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/fab_margin"
                android:text="유저 닉네임"
                android:textColor="@color/main_gray_light"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_profile_img"
                app:layout_constraintEnd_toStartOf="@+id/iv_menu"
                app:layout_constraintStart_toEndOf="@id/iv_profile_img"
                app:layout_constraintTop_toTopOf="@id/iv_profile_img" />



            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_margin="@dimen/fab_margin"
                android:src="@drawable/ic_menu"
                app:tint="@color/main_gray_light"
                app:layout_constraintBottom_toBottomOf="@id/iv_profile_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_profile_img"/>


            <TextView
                android:id="@+id/tv_post_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="게시물 제목..."
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_margin="@dimen/fab_margin"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/iv_profile_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_post_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="게시물 내용...\n.....\n.....\n....."
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_margin="@dimen/fab_margin"
                app:layout_constraintTop_toBottomOf="@id/tv_post_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_post_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/fab_margin"
                app:layout_constraintTop_toBottomOf="@id/tv_post_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/cb_heart"
                android:layout_width="26dp"
                android:layout_height="26dp"
                app:tint="@color/main_red"
                android:layout_margin="@dimen/fab_margin"
                android:src="@drawable/ic_heart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_post_media"/>

            <TextView
                android:id="@+id/tv_heart_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/main_red"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/cb_heart"
                app:layout_constraintTop_toTopOf="@id/cb_heart"
                app:layout_constraintBottom_toBottomOf="@id/cb_heart"/>

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_comment_2"
                app:tint="@color/main_gray_light"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/tv_heart_num"
                app:layout_constraintTop_toTopOf="@id/tv_heart_num"
                app:layout_constraintBottom_toBottomOf="@id/tv_heart_num"/>

            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/main_gray_light"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/iv_comment"
                app:layout_constraintTop_toTopOf="@id/iv_comment"
                app:layout_constraintBottom_toBottomOf="@id/iv_comment"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_post_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                android:layout_margin="@dimen/fab_margin"
                app:layout_constraintTop_toBottomOf="@id/cb_heart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_see_more_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_more_comment"
                android:textColor="@color/main_red"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_post_comment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>