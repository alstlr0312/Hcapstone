<?xml version="1.1" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.You.haveto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.You.haveto.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_app_logo_round"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Capstone"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="adjustResize">
        <activity
            android:name="com.You.haveto.features.mypage.mycomments.MyCommentsActivity"
            android:exported="false"/>
        <activity
            android:name="com.You.haveto.features.mypage.MemberPageActivity"
            android:exported="false" />
        <activity
            android:name="com.You.haveto.features.mypage.setting.SettingActivity"
            android:exported="false" />
        <activity
            android:name="com.You.haveto.features.diary.FeedbackPostureActivity"
            android:exported="false" />
        <activity
            android:name="com.You.haveto.features.mypage.editprofile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.You.haveto.features.home.recommend.RecommendActivity"
            android:exported="false" />
        <activity
            android:name="com.You.haveto.features.mypage.myposts.MyPostsActivity"
            android:exported="false" />
        <activity
            android:name="com.You.haveto.features.login.find.FindIdActivity"
            android:exported="false" />
        <activity
            android:name="com.You.haveto.features.login.find.FindPwActivity"
            android:exported="false" />

        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="${NAVER_CLIENT_ID}"/>

        <activity
            android:name="com.You.haveto.features.media.MediaFullActivity"
            android:exported="false"
            android:screenOrientation="behind"/>
        <activity
            android:name="com.You.haveto.features.comment.CommentActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.You.haveto.features.postdetail.PostDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.You.haveto.features.postwrite.PostWriteActivity"
            android:exported="false" />
        <activity
            android:name="com.You.haveto.features.diary.DiaryActivity"
            android:exported="false" />
        <activity
            android:name="com.You.haveto.features.diary.AddExerciseActivity"
            android:exported="false" />
        <activity
            android:name="com.You.haveto.features.signup.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.You.haveto.features.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.You.haveto.features.login.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name="com.You.haveto.features.BaseActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name="com.You.haveto.features.ar.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.You.haveto.features.ar.MainUnityActivity"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|fontScale|layoutDirection|density"
            android:hardwareAccelerated="false"
            android:label="@string/app_name"
            android:process=":Unity"
            android:screenOrientation="fullSensor" />

        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesMenuActivity"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>